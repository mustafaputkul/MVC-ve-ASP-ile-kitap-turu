@model List<KitapTuru>

<h1>Kitap Türleri</h1>
<table class="table table-bordered">
	<thead>
		<tr>
			<th>
				Id
			</th>
			<th>
				Kitap Türü
			</th>
		</tr>
	</thead>

	<tbody>
		@foreach (var kitapTuru in Model)
		{
			<tr>
				<td>@kitapTuru.ID</td>
				<td>@kitapTuru.Ad</td>
			</tr>
		}
	</tbody>
</table>

<div class="row pt-3 pb-2">
	<div>
		<a asp-controller="KitapTuru" asp-action="Ekle" class="btn btn-lg btn-primary" type="button">
			Yeni Kitap Türü Oluştur
		</a>
	</div>
</div>
